public class OneDigitRemovePalindrome {

    public static int digitRemove_palin(int input) {
        String num = String.valueOf(input);
    
        if (num.length() == 1) {
            return -1; 
        }
        
        if (isPalindrome(num)) {
            return Character.getNumericValue(num.charAt(0));
        }
        
        for (int i = 0; i < num.length(); i++) {
            String newNum = num.substring(0, i) + num.substring(i + 1);
            if (isPalindrome(newNum)) {
                return Character.getNumericValue(num.charAt(i));
            }
        }
        return -1;
    }

    private static boolean isPalindrome(String s) {
        int left = 0, right = s.length() - 1;
        while (left < right) {
            if (s.charAt(left++) != s.charAt(right--)) {
                return false;
            }
        }
        return true;
    }
}
